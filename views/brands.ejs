<!-- FILE: brands.ejs -->

<%- include('header'); -%>

    <!-- Navbar -->
    <%- include('navbar'); -%>

        <main class="content">
            <!-- Brands Section -->
            <section class="container px-5 mt-5">
                <div class="mb-5">
                    <h2 class="text-dark mb-0 fw-bold">Brands</h2>
                    <p class="text-muted">Our partnering with the best brands in the industry to bring you top-quality
                        bikes.
                    </p>
                </div>
                <div id="brands-list" class="row g-5 justify-content-center">
                    <% for (brand of brands) { -%>
                        <div class="col-4 col-md-3 col-lg-2 align-content-center">
                            <img src="<%= brand.BRAND_IMAGE %>" alt="" class="img-fluid">
                        </div>
                        <% } -%>
                </div>
            </section>
        </main>

        <%- include('footer'); -%>