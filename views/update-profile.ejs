<!-- PAGE: Update Profile -->
<!-- FILE: update-profile.ejs -->

<%- include('header'); -%>

    <!-- Navbar -->
    <%- include('navbar'); -%>

        <main class="content">
            <section class="container px-5 mt-5 text-dark">
                <div class="row align-items-center g-5 justify-content-center">
                    <div class="col-md-6">
                        <h1 class="display-5 fw-bold text-dark">Update Profile</h1>
                        <p class="text-muted mb-4">Update your profile details</p>

                        <!-- Update Profile Form -->
                        <form class="update-profile-form" novalidate method="POST" action="/update-profile">
                            <!-- Username -->
                            <div style="border-left: thick solid #000000; padding-left: 10px;" class="mb-4">
                                <p class="mb-0 text-muted">Username</p>
                                <h5 class="mb-0">
                                    <%= user.USER_USERNAME %>
                                </h5>
                            </div>

                            <!-- Fullname -->
                            <div class="mb-3">
                                <label for="fullname" class="form-label">Fullname</label>
                                <input type="text" class="form-control" id="fullname" name="fullname"
                                    value="<%= user.USER_FULLNAME %>" required>
                                <div class="invalid-feedback">
                                    Enter your fullname
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    value="<%= user.USER_EMAIL %>" required>
                                <div class="invalid-feedback">
                                    Enter a valid email
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone number</label>
                                <input type="text" class="form-control" id="phone" name="phone"
                                    value="<%= user.USER_PHONE %>" required>
                                <div class="invalid-feedback">
                                    Enter your phone number
                                </div>
                            </div>

                            <!-- Address -->
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address"
                                    value="<%= user.USER_ADDRESS %>" required>
                                <div class="invalid-feedback">
                                    Enter your address
                                </div>
                            </div>

                            <!-- DoB -->
                            <div class="mb-3">
                                <label for="dob" class="form-label">Date of birth</label>
                                <input type="date" class="form-control" id="dob" name="dob" value="<%= user.USER_DOB %>"
                                    required>
                                <div class="invalid-feedback">
                                    Enter your date of birth
                                </div>
                            </div>

                            <button type="submit" class="btn btn-dark rounded-5 px-4 py-2 mt-2"
                                onclick="validateForm()">
                                Update
                            </button>
                        </form>
                    </div>
                </div>
            </section>
        </main>

        <script>
            function validateForm() {
                const form = document.querySelector('.update-profile-form');

                // Add event listener when submitting form
                // Prevent submitting and showing error if invalidated
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            }
        </script>

        <%- include('footer'); -%>